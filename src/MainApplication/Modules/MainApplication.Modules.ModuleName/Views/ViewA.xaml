<UserControl
    x:Class="MainApplication.Modules.ModuleName.Views.ViewA"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MainApplication.Modules.ModuleName.Views"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:resources="clr-namespace:MainApplication.Core.Resources;assembly=MainApplication.Core"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Text="{x:Static resources:Text.ApplicationName}" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Text="{Binding Message}" />
        </StackPanel>
    </Grid>
</UserControl>
