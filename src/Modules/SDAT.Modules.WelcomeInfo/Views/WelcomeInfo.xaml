<UserControl
    x:Class="SDAT.Modules.WelcomeInfo.Views.WelcomeInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:resources="clr-namespace:SDAT.Modules.WelcomeInfo.Resources"
    xmlns:viewmodels="clr-namespace:SDAT.Modules.WelcomeInfo.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:WelcomeInfoViewModel,
                                     IsDesignTimeCreatable=True}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid Margin="10,10,10,10">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                Text="{x:Static resources:Strings.MessageWelcomeInfoTitle}" />
            <TextBlock
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignBody1TextBlock}"
                Text="{x:Static resources:Strings.MessageWelcomeInfoBody}" />
        </StackPanel>
    </Grid>
</UserControl>
